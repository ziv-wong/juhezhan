<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Color_White"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <devlight.io.library.ntb.NavigationTabBar
        android:id="@+id/tab_main"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:ntb_active_color="#fff"
        app:ntb_animation_duration="400"
        app:ntb_badge_bg_color="#ffff0000"
        app:ntb_badge_gravity="top"
        app:ntb_badge_position="right"
        app:ntb_badge_size="10sp"
        app:ntb_badge_title_color="#ffffffff"
        app:ntb_badged="false"
        app:ntb_bg_color="#3f51b5"
        app:ntb_corners_radius="0dp"
        app:ntb_icon_size_fraction="0.5"
        app:ntb_inactive_color="#7986cb"
        app:ntb_preview_colors="@array/regular_purple"
        app:ntb_scaled="true"
        app:ntb_swiped="true"
        app:ntb_tinted="true"
        app:ntb_title_mode="all"
        app:ntb_title_size="10sp"
        app:ntb_titled="true"
        />

</LinearLayout>
